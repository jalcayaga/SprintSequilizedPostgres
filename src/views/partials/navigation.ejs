              <a class="nav-link text-white" href="/bank">Bank</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/users">Users</a>
            </li>
            <span>
              <a href="/logout" class="btn btn-danger btn-sm mt-1 me-2">
                <i class="bi bi-box-arrow-right"></i> Salir
              </a>
            </span>
              
            
            <!-- -------------------------------- login -------------------------------- -->

            <div class="ms-2 text-end d-flex">
              <div class="btn-group dropstart">
                <button type="button" class="btn btn-outline-warning mt-1 me-2 dropdown-toggle btn-sm" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside" data-bs-offset="10,20">
                  <i class="bi bi-box-arrow-in-right"> Login</i>
                </button>                   
                <div class="dropdown-menu drop-menu-end bg-dark text-white p-3 dropdown-menu-lg" style="width: 300px;" data-bs-boundary="viewport">
                  <form class="px-2 py-2" method="POST" action="/login">
                    <div class="mb-3">
                      <label for="email" class="form-label">Email:</label>
                      <input type="email" class="form-control form-control-sm" id="email" name="email" placeholder="Email" required>
                    </div>
                    <div class="mb-3">
                      <label for="password">Contraseña</label>
                      <input type="password" class="form-control form-control-sm" id="password" name="password" required>
                    </div>
                    <div class="mb-3">
                      <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="dropdownCheck">
                        <label class="form-check-label" for="dropdownCheck">Recordarme</label>
                      </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-sm w-100">Iniciar Sesión</button>
                  </form>
                  <a class="dropdown-item text-white text-sm" href="#">Olvidaste la contraseña?</a>
                </div>
              </div>

               <!-- ----------------------------- registrarse ----------------------------- -->
            
              <div class="btn-group dropstart">
                <button type="button" class="btn btn-outline-success mt-1 me-2 dropdown-toggle btn-sm" id="registerDropdownButton" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside" data-bs-offset="10,20">
                  Registrarse
                </button>
                <div class=" dropdown-menu drop-menu-end bg-dark text-white p-3 dropdown-menu-lg" style="width: 300px;" aria-labelledby="registerDropdownButton">
                  <form class="px-2 py-2" method="POST" action="/users">
                    <div class="mb-3">
                      <label for="nombre" class="form-label">Nombre:</label>
                      <input
                        type="text"
                        class="form-control form-control-sm"
                        id="nombre"
                        name="nombre"
                        placeholder="Nombre"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="apellido" class="form-label">Apellido:</label>
                      <input
                        type="text"
                        class="form-control form-control-sm"
                        id="apellido"
                        name="apellido"
                        placeholder="Apellido"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="email" class="form-label">Email:</label>
                      <input
                        type="email"
                        class="form-control form-control-sm"
                        id="email"
                        name="email"
                        placeholder="Email"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="password">Contraseña</label>
                      <input type="password" class="form-control form-control-sm" id="password" name="password" required>
                    </div>
                    <div class="mb-3">
                      <label for="confirm-password">Confirmar Contraseña</label>
                      <input type="password" class="form-control form-control-sm" id="confirm-password" name="confirmPassword" required>
                    </div>
                    <button type="submit" class="btn btn-success btn-sm w-100">Registrarse</button>
                  </form>
                </div>
              </div>

            </div>      
      
          </ul>

        </div>
      </div>
  </div>
</header>
